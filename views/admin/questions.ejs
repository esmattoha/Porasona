<body>
   <%- include('../includes/nav.ejs') %>

<form class="container" action="/admin/questions" method="POST">
    <div class="form-group">
        <label for="title">Question </label> 
        <input class="form-control form-control-lg" type="text" placeholder="question" name="title" id="title">
    </div>
    <input type="hidden" name="quizId" value="<%= quizId %>">
    <div class="form-group">
        <label for="options">Options </label> 
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="op1">Op 1 </label>
                <input class="form-control form-control-lg" type="text" placeholder="op1" name="op1" id="op1">
                <label for="op2">Op 2 </label>
                <input class="form-control form-control-lg" type="text" placeholder="op2" name="op2" id="op2">
                <label for="op3">Op 3 </label>
                <input class="form-control form-control-lg" type="text" placeholder="op3" name="op3" id="op3">
                <label for="op4">Op 4 </label>
                <input class="form-control form-control-lg" type="text" placeholder="op4" name="op4" id="op4">
              </div>
            </div>
    </div>
    <div class="form-group">
        <label for="answer">Answer </label> 
        <input class="form-control form-control-lg" type="text" placeholder="answer" name="answer" id="answer" >
    </div>
    
    <form action="/admin/questions" method="POST">
        <input type="hidden" value="<%= csrfToken %>"  name="_csrf">
        <button type="submit" class="btn btn-primary">Submit</button>
        
    </form>
  </form>

  <%- include('../includes/end.ejs') %>